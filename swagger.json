{
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "Ecommerce ",
      "version": "1.0.0",
      "description": "Ecommerce  API with Swagger"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "components": {
      "securitySchemes": {
        "Authorization": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT",
          "value": "Bearer <JWT token here>"
        }
      }
    }
  },
  "apis": ["./routes/*.js"]
}
